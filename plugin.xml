    <resource>org.dojotoolkit.FrameTagLib</resource>
    <resource>org.dojotoolkit.GridTagLib</resource>
    <resource>org.dojotoolkit.MenuTagLib</resource>
    <resource>org.dojotoolkit.PaginateTagLib</resource>
    <resource>org.dojotoolkit.PopOverTagLib</resource>
    <resource>org.dojotoolkit.ProgressBarTagLib</resource>
    <resource>org.dojotoolkit.SortableColumnTagLib</resource>
    <resource>org.dojotoolkit.TabTagLib</resource>
  </resources>
  <dependencies />
  <behavior />
</plugin>